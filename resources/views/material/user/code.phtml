                    } else {
                        $("#result").modal();
                        $("#msg").html(data.msg);
                        window.setTimeout("location.href=window.location.href", <?= $_ENV['jump_delay']; ?>);
                    }
                },
                error: function (jqXHR) {
                    $("#result").modal();
                    $("#msg").html("发生错误：" + jqXHR.status);
                }
            })
        })


    timestamp = {time()};


    function f(){
        $.ajax({
            type: "GET",
            url: "code_check",
            dataType: "json",
            data: {
                time: timestamp
            },
            success: function (data) {
                if (data.ret) {
                    clearTimeout(tid);
                    $("#result").modal();
                    $("#msg").html("充值成功！");
                    window.setTimeout("location.href=window.location.href", <?= $_ENV['jump_delay']; ?>);
                }
            }
        });
        tid = setTimeout(f, 1000); //循环调用触发setTimeout
    }
    setTimeout(f, 1000);
})
